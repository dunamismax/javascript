{
  "name": "javascript-monorepo",
  "version": "2.0.0",
  "description": "A modern full-stack JavaScript development environment featuring vanilla HTML/CSS/JS, Node.js, Fastify, MongoDB, and modern tooling",
  "author": {
    "name": "dunamismax",
    "email": "dunamismax@tutamail.com",
    "url": "https://github.com/dunamismax/javascript"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "pnpm --recursive --if-present run dev",
    "start": "pnpm --recursive --if-present run start",
    "build": "pnpm --recursive --if-present run build",
    "build:dev": "pnpm --recursive --if-present run build:dev",
    "test": "pnpm --recursive --if-present run test",
    "lint": "eslint . --ext .js,.mjs",
    "lint:fix": "eslint . --ext .js,.mjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "echo 'No TypeScript in this project'",
    "clean": "pnpm exec -- rm -rf apps/*/dist packages/*/dist",
    "install:all": "pnpm install",
    "dev:todo": "cd apps/todo-list && pnpm dev",
    "dev:weather": "cd apps/weather && pnpm dev"
  },
  "devDependencies": {
    "eslint": "^9.31.0",
    "@eslint/js": "^9.31.0",
    "globals": "^15.14.0",
    "prettier": "^3.6.2",
    "nodemon": "^3.1.10",
    "concurrently": "^9.2.0",
    "esbuild": "^0.25.8"
  },
  "dependencies": {
    "fastify": "^5.4.0",
    "mongodb": "^6.18.0",
    "@vinejs/vine": "^3.0.1",
    "dotenv": "^17.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "type": "module"
}
