{
  "name": "javascript-monorepo",
  "version": "2.0.0",
  "description": "A modern full-stack JavaScript development environment featuring vanilla HTML/CSS/JS, Node.js, Fastify, MongoDB, and modern tooling",
  "author": {
    "name": "dunamismax",
    "email": "dunamismax@tutamail.com",
    "url": "https://github.com/dunamismax/javascript"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "pnpm run dev --recursive --if-present",
    "start": "pnpm run start --recursive --if-present",
    "build": "pnpm run build --recursive --if-present",
    "build:dev": "pnpm run build --recursive --if-present -- --dev",
    "test": "pnpm test --recursive --if-present",
    "lint": "eslint . --ext .js,.mjs",
    "lint:fix": "eslint . --ext .js,.mjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "echo 'No TypeScript in this project'",
    "clean": "pnpm exec -- rm -rf apps/*/dist packages/*/dist",
    "install:all": "pnpm install",
    "dev:todo": "cd apps/todo-list && pnpm dev",
    "dev:weather": "cd apps/weather && pnpm dev"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "@eslint/js": "^9.0.0",
    "prettier": "^3.2.5",
    "nodemon": "^3.0.3",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.12"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "mongodb": "^6.3.0",
    "@vinejs/vine": "^1.7.1",
    "dotenv": "^16.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "type": "module"
}
