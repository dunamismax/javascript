{
  "name": "javascript-monorepo",
  "version": "1.0.0",
  "description": "A modern JavaScript development environment featuring vanilla JavaScript, Node.js, Express.js, and EJS",
  "author": {
    "name": "dunamismax",
    "email": "dunamismax@tutamail.com",
    "url": "https://github.com/dunamismax/javascript"
  },
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "start": "npm run start --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "test": "npm test --workspaces --if-present",
    "lint": "eslint . --ext .js,.mjs",
    "lint:fix": "eslint . --ext .js,.mjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "@eslint/js": "^9.0.0",
    "prettier": "^3.2.5",
    "nodemon": "^3.0.3",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ejs": "^3.1.9",
    "dotenv": "^16.4.5",
    "marked": "^12.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "type": "module"
}