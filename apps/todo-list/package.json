{
  "name": "todo-list-app",
  "version": "1.0.0",
  "description": "Full-stack todo list app with SQLite backend",
  "scripts": {
    "dev": "concurrently \"node build.js --watch\" \"npm run server:dev\"",
    "build": "node build.js",
    "start": "concurrently \"npx http-server dist -p 3001 -s\" \"npm run server:start\"",
    "server:dev": "nodemon src/server/server.js",
    "server:start": "node src/server/server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5"
  }
}